{
  "name": "Server IP",
  "version": "2.2.0",
  "description": "View Server IP address or alias",
  "icons": {
	  "16": "icon16.png",
	  "48": "icon48.png",
	  "128":"icon128.png"
  },
  "background": { "scripts": ["background.js"] },
  "permissions": ["webRequest","<all_urls>","tabs"],
  "options_page": "options_new.html",
  "browser_action" : {
	  "default_title"  	: "ServerIP",
	  "default_icon" 	: {
		  "19": "icon19.png",
		  "38": "icon38.png"
	  }
  },
  "content_scripts" :[{
	  "matches"	: ["<all_urls>"],
	  "js"		: ["hover-box.js"]
  }],
  "manifest_version": 2
}
